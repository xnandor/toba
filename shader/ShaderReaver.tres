	float iGlobalTime = TIME;
	float xx = x+sin(iGlobalTime*fx/speed)*0.7;
	float yy = y+cos(iGlobalTime*fy/speed)*0.7;
	return 20.0/sqrt(xx*xx+yy*yy);
}

